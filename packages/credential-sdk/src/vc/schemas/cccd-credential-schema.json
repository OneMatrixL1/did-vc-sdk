{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://cccd.gov.vn/schemas/cccd/1.0.0",
    "title": "CCCD Credential Subject Schema",
    "description": "JSON Schema for Vietnamese Citizen Identification (CCCD) Credential Subject",
    "type": "object",
    "properties": {
        "credentialSubject": {
            "type": "object",
            "properties": {
                "dg1": {
                    "type": "string",
                    "description": "Base64 encoded Data Group 1 (MRZ)"
                },
                "dg2": {
                    "type": "string",
                    "description": "Base64 encoded Data Group 2 (Face image)"
                },
                "dg13": {
                    "type": "string",
                    "description": "Base64 encoded Data Group 13 (Optional details)"
                },
                "dg14": {
                    "type": "string",
                    "description": "Base64 encoded Data Group 14 (Security features)"
                },
                "dg15": {
                    "type": "string",
                    "description": "Base64 encoded Data Group 15 (Active Authentication public key)"
                },
                "com": {
                    "type": "string",
                    "description": "Base64 encoded Common Data (COM)"
                }
            }
        }
    }
}